#!/usr/bin/env python3
"""Simple random number generator CLI."""

from __future__ import annotations

import argparse
import random


def parse_args() -> argparse.Namespace:
    parser = argparse.ArgumentParser(description="Generate random integers.")
    parser.add_argument("--min", type=int, default=1, dest="minimum", help="Minimum value (inclusive).")
    parser.add_argument("--max", type=int, default=100, dest="maximum", help="Maximum value (inclusive).")
    parser.add_argument("--count", type=int, default=1, help="How many numbers to generate.")
    return parser.parse_args()


def generate_random_numbers(minimum: int, maximum: int, count: int) -> list[int]:
    if minimum > maximum:
        raise ValueError("--min must be less than or equal to --max")
    if count < 1:
        raise ValueError("--count must be at least 1")
    return [random.randint(minimum, maximum) for _ in range(count)]


def main() -> None:
    args = parse_args()
    numbers = generate_random_numbers(args.minimum, args.maximum, args.count)
    for number in numbers:
        print(number)


if __name__ == "__main__":
    main()
